<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
	version="2.1">

	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>LOGIN</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>DESKTOP</from-outcome>
			<to-view-id>/ui/home.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
           <from-outcome>CONFIRM</from-outcome>
           <to-view-id>/ui/confirm.xhtml</to-view-id>
       </navigation-case>
       <navigation-case>
			<from-outcome>USERS</from-outcome>
			<to-view-id>/ui/users.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	
	<application>
		<locale-config>
			<default-locale>it</default-locale>
		</locale-config>
		
		<resource-bundle>
			<base-name>locale.labels</base-name>
			<var>msg</var>
		</resource-bundle>
	</application>

	
	<converter>
	  <converter-for-class>java.lang.Enum</converter-for-class>
	  <converter-class>javax.faces.convert.EnumConverter</converter-class>
	</converter>
	
    <application>
        <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
    </application>


</faces-config>
